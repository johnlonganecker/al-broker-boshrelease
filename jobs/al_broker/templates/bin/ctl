#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/al_broker/helpers/ctl_setup.sh 'al_broker'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    LISTENING_PORT=<%= p('al_broker.listening_port') %>
    DESTINATION_PORT=<%= p('al_broker.destination_port') %>
    DESTINATION_URL=<%= p('al_broker.destination_url') %>

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap al-broker \
         --listening-port=${LISTENING_PORT} \
         --dest-port=${DESTINATION_PORT} \
         --dest-url=${DESTINATION_URL} \
         >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: al-broker_ctl {start|stop}"

    ;;

esac
exit 0
