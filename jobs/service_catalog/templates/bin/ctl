#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/service_catalog/helpers/ctl_setup.sh 'service_catalog'

export PORT=${PORT:-5000}
export LANG=en_US.UTF-8

SERVICE_CATALOG_PORT=<%= p('service_catalog.port') %>

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    # need to run the http server from the job folder
    cd /var/vcap/jobs/service_catalog

    exec chpst -u vcap:vcap python \
         -m SimpleHTTPServer $SERVICE_CATALOG_PORT \
         >>$LOG_DIR/$JOB_NAME.log 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: service_catalog_ctl {start|stop}"

    ;;

esac
exit 0
